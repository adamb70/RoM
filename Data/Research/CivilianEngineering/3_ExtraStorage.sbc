<?xml version="1.0"?>
<Definitions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">

  <Definition xsi:type="MyObjectBuilder_ResearchNodeDefinition">
    <Id Type="ResearchNodeDefinition" Subtype="CivilianExtraStorage" />
    <DisplayName>DisplayName_ResearchNode_CivilianExtraStorage</DisplayName>
    <Description>Description_ResearchNode_CivilianExtraStorage</Description>
    <Icon>Textures\GUI\Icons\Schematics\ExtraStorage.dds</Icon>
    <Quest Type="QuestDefinition" Subtype="CivilianExtraStorage" />
    <Research Type="ResearchDefinition" Subtype="CivilianExtraStorage" />
    <Parent Type="ResearchNodeDefinition" Subtype="CivilianFurniture" />
  </Definition>

  <Definition xsi:type="MyObjectBuilder_QuestDefinition">
    <Id Type="QuestDefinition" Subtype="CivilianExtraStorage" />

    <DisplayName>DisplayName_Quest_CivilianExtraStorage</DisplayName>
    <Description>Description_Quest_CivilianExtraStorage</Description>
    <Icon>Textures\GUI\Book\QuestBook_Quest_Thumbnail.png</Icon>
    <Tag>Research</Tag>

    <IsAbandonable>true</IsAbandonable>
    <IsRepeatable>false</IsRepeatable>

    <FailAction xsi:type="Quest.Actions.ShowNotification" Text="Description_ResearchQuest_Failed" SoundCueId="QuestCompleted" />


    <SuccessAction xsi:type="Quest.Actions.ShowNotification" Text="Description_ResearchQuest_Completed" SoundCueId="QuestCompleted" />

    <Step>
      <FullDescription>Description_Quest_CivilianExtraStorage_Step01</FullDescription>
      <Condition xsi:type="Quest.Conditions.Gather" Tag="Plank" Amount="20" AreaInventory="Included" />
      <Action xsi:type="Quest.Actions.ShowNotification" Text="Description_Quest_CivilianExtraStorage_Step01_Complete" SoundCueId="QuestStepCompleted" SoundDelay="300" />
    </Step>
    <Step>
      <FullDescription>Description_Quest_CivilianExtraStorage_Step02</FullDescription>
      <Condition xsi:type="Quest.Conditions.Composite" Operator="AND">
        <Condition xsi:type="Quest.Conditions.Composite" Operator="OR" ActiveDescription="Description_Quest_CivilianExtraStorage_Step02_Active" CompletedDescription="Description_Quest_CivilianExtraStorage_Step02_Complete">
          <Condition xsi:type="Quest.Conditions.Craft" Type="CubeBlock" Subtype="CrateWood" Amount="2" />
          <Condition xsi:type="Quest.Conditions.Gather" Type="CubeBlock" Subtype="CrateWood" Amount="2" />
        </Condition>
        <Condition xsi:type="Quest.Conditions.PlaceBlock" Type="CubeBlock" Subtype="CrateWood" Amount="2" />
      </Condition>
    </Step>
    <Step>
      <FullDescription>Description_Quest_CivilianExtraStorage_Step03</FullDescription>
      <Condition xsi:type="Quest.Conditions.Composite" Operator="AND">
        <Condition xsi:type="Quest.Conditions.Gather" Tag="Plank" Amount="4" AreaInventory="Included" />
        <Condition xsi:type="Quest.Conditions.Gather" Tag="Timber" Amount="4" AreaInventory="Included" />
      </Condition>
      <Action xsi:type="Quest.Actions.ShowNotification" Text="Description_Quest_CivilianExtraStorage_Step03_Complete" SoundCueId="QuestStepCompleted" SoundDelay="300" />
    </Step>
    <Step>
      <FullDescription>Description_Quest_CivilianExtraStorage_Step04</FullDescription>
      <Condition xsi:type="Quest.Conditions.Composite" Operator="AND">
        <Condition xsi:type="Quest.Conditions.Composite" Operator="OR" ActiveDescription="Description_Quest_CivilianExtraStorage_Step04_Active" CompletedDescription="Description_Quest_CivilianExtraStorage_Step04_Complete">
          <Condition xsi:type="Quest.Conditions.Craft" Type="CubeBlock" Subtype="StockpileOreSmall" Amount="1" />
          <Condition xsi:type="Quest.Conditions.Gather" Type="CubeBlock" Subtype="StockpileOreSmall" Amount="1" />
        </Condition>
        <Condition xsi:type="Quest.Conditions.PlaceBlock" Type="CubeBlock" Subtype="StockpileOreSmall" Amount="1" />
      </Condition>
    </Step>
  </Definition>

  <Definition xsi:type="ResearchDefinition">
    <Id Type="ResearchDefinition" Subtype="CivilianExtraStorage" />
    <DisplayName>DisplayName_Research_CivilianExtraStorage</DisplayName>
  </Definition>

  <Definition xsi:type="MyObjectBuilder_CraftingRecipeDefinition" Copy="Append">
	<CopyFrom Type="MyObjectBuilder_CraftingRecipeDefinition" Subtype="SchematicBase" />
    <Id Type="MyObjectBuilder_CraftingRecipeDefinition" Subtype="SchematicCivilianExtraStorage"/>
    <DisplayName>DisplayName_Schematic_CivilianExtraStorage</DisplayName>
    <Description>Description_Schematic_CivilianExtraStorage</Description>
    <Icon>Textures\GUI\Icons\Schematics\ScrollBackground_1.dds</Icon>
    <Icon>Textures\GUI\Icons\Schematics\ExtraStorage.dds</Icon>
    <Icon>Textures\GUI\Icons\Schematics\ScrollBackground_2.dds</Icon>
    <Icon>Textures\GUI\Icons\Schematics\OverlayScrollCivil.dds</Icon>
    <Results>
      <Item Amount="1" Type="SchematicItem" Subtype="SchematicCivilianExtraStorage" />
    </Results>
  </Definition>

  <Definition xsi:type="MyObjectBuilder_SchematicItemDefinition" Copy="Append">
	<CopyFrom Type="SchematicItem" Subtype="SchematicBase" />
    <Id Type="SchematicItem" Subtype="SchematicCivilianExtraStorage" />
    <DisplayName>DisplayName_Schematic_CivilianExtraStorage</DisplayName>
    <Description>Description_Schematic_CivilianExtraStorage</Description>
    <Icon>Textures\GUI\Icons\Schematics\ScrollBackground_1.dds</Icon>
    <Icon>Textures\GUI\Icons\Schematics\ExtraStorage.dds</Icon>
    <Icon>Textures\GUI\Icons\Schematics\ScrollBackground_2.dds</Icon>
    <Icon>Textures\GUI\Icons\Schematics\OverlayScrollCivil.dds</Icon>
	<Research Type="ResearchDefinition" Subtype="Null" />
  </Definition>
</Definitions>