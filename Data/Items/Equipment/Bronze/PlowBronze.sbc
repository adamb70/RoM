    <Mass>0.5</Mass>
    <Model>Models\Weapons\PlowBronze.mwm</Model>

    <PhysicalMaterial>Plow</PhysicalMaterial>

    <Animation>Plow</Animation>

    <DummyMapping Name="shovel_dumb_left" AnimationVariable="#shovelleft"/>

    <MaxStackAmount>1</MaxStackAmount>

    <!-- Equipment -->
    <BearerDefinition Type="MyObjectBuilder_EntityEquipmentComponent" Subtype="Humanoid"/>

    <MaxDurability>100</MaxDurability>

    <Position>
      <Slot>MainHand</Slot>
      <Slot>OffHand</Slot>
