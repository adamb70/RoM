    <Icon>Textures\GUI\Icons\ToolsAndWeapons\ShieldKiteHouse.png</Icon>
    <Size>
      <X>0.5</X>
      <Y>0.3</Y>
      <Z>0.5</Z>
    </Size>
    <Mass>2</Mass>
    <Model>Models\Weapons\ShieldKitePersonal.mwm</Model>
    <PhysicalMaterial>ShieldWood</PhysicalMaterial>

    <Animation>Shield</Animation>

    <MaxStackAmount>1</MaxStackAmount>

    <EquippedTransform>
      <Position x="0" y="0.1" z="0" />
      <Up x="0" y="1" z="0" />
      <Forward x="1" y="0" z="0" />
    </EquippedTransform>

    <BearerDefinition Type="MyObjectBuilder_EntityEquipmentComponent" Subtype="Humanoid"/>
    <MaxDurability>150</MaxDurability>
    <Position>
      <Slot>OffHand</Slot>
    </Position>

    <!-- Behaviors -->
    <StanceToBehavior>
      <StanceName>CombatMode</StanceName>
      <BehaviorId Type="ShieldBehaviorDefinition" Subtype="ShieldKite"/>
    </StanceToBehavior>
  </Definition>


  <Definition xsi:type="MyObjectBuilder_ShieldBehaviorDefinition">
    <Id Type="ShieldBehaviorDefinition" Subtype="ShieldKite"/>

    <CanBlock>true</CanBlock>

    <!-- Cover from the left -->
    <LeftSwing>
      <Coverage>Left</Coverage>
      <Coverage>Right</Coverage>
      <Coverage>Center</Coverage>
    </LeftSwing>

    <!-- Cover from the right -->
    <RightSwing>
      <Coverage>Left</Coverage>
      <Coverage>Right</Coverage>
      <Coverage>Center</Coverage>
    </RightSwing>

    <!-- Cover from the up -->
    <ForwardSwing>
      <Coverage>Head</Coverage>
      <Coverage>Center</Coverage>
    </ForwardSwing>

    <RaiseAnimation>block_idle</RaiseAnimation>
    <RaiseTime>.35</RaiseTime>
    <BlockStatCost Stat="Stamina" Cost="10" />
    <ProjectileBlockStatCost Stat="Stamina" Cost="5" />
    <BlockEffect Type="CompositeEntityEffect" Subtype="Blocking" />
  </Definition>

  <Definition xsi:type="MyObjectBuilder_EntityBannerComponentDefinition">
