  <Definition xsi:type="MyObjectBuilder_HandItemDefinition">
    <Id Type="HandItem" Subtype="ShieldKitePersonal"/>
    <DisplayName>DisplayName_Item_ShieldKitePersonal</DisplayName>
    <Description>Description_Item_ShieldKitePersonal</Description>
    <Icon>Textures\GUI\Icons\ToolsAndWeapons\ShieldKitePersonal.png</Icon>
    <Size>
      <X>0.5</X>
      <Y>0.3</Y>
      <Z>0.5</Z>
    </Size>
    <Mass>2</Mass>
    <Model>Models\Weapons\ShieldKitePersonal.mwm</Model>
    <PhysicalMaterial>ShieldWood</PhysicalMaterial>
    
    <Animation>Shield</Animation>
    
    <MaxStackAmount>1</MaxStackAmount>

    <EquippedTransform>
      <Position x="0" y="0.1" z="0" />
      <Up x="0" y="1" z="0" />
      <Forward x="1" y="0" z="0" />
    </EquippedTransform>

    <BearerDefinition Type="MyObjectBuilder_EntityEquipmentComponent" Subtype="Humanoid"/>
    <MaxDurability>150</MaxDurability>
    <Position>
      <Slot>OffHand</Slot>
    </Position>
    
    <!-- Behaviors -->
    <StanceToBehavior>
      <StanceName>CombatMode</StanceName>
      <BehaviorId Type="ShieldBehaviorDefinition" Subtype="ShieldKite"/>
    </StanceToBehavior>
  </Definition>

  <Definition xsi:type="MyObjectBuilder_HandItemDefinition">
    <Id Type="HandItem" Subtype="ShieldKiteHouse"/>
    <DisplayName>DisplayName_Item_ShieldKiteHouse</DisplayName>
