<?xml version="1.0"?>
<Definitions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">

  <!-- ============================= Begin Bloomery stuff ============================= -->
  <!-- This bloomery is a test version. It has a component that decays any "DurableItem" type items inside it. -->

  <Definition xsi:type="MyObjectBuilder_BuildableBlockDefinition">
    <Id Type="Block" Subtype="DecayableBloomery" />
    <DisplayName>TEST Bloomery - decaying items</DisplayName>
    <Description>Description_Block_Furnace</Description>
    <Icon>Textures\GUI\Icons\Cubes\ClayFurnace.dds</Icon>
    <GridDataDefinitionId Type="GridDataComponent" Subtype="SmallGridDataBase" />
    <BoundingBox>
      <Min x="-3" y="-2" z="-3" />
      <Max x="3" y="5" z="3" />
    </BoundingBox>
    <Model>Models\Cubes\small\FurnaceClay_V1.mwm</Model>
    <PhysicalMaterial>StoneHeavy</PhysicalMaterial>
    <Components>
      <Component Type="Block" Subtype="DecayableBloomery" Count="1" />
    </Components>
    <Volume>4500</Volume>
    <Rotation>YAxis</Rotation>
    <MountPoints>
      <MountPoint Side="Bottom" StartX="0" StartY="0" EndX="3" EndY="3" />
    </MountPoints>
    <ParticleScale>0.22</ParticleScale>
    <LightRadius Min="6.5" Max="6.5" Default="6.5" />
    <LightFalloff Min="0.3" Max="0.3" Default="0.3" />
    <LightIntensity Min="0.3" Max="0.3" Default="0.3" />
    <PrimarySound>BlockFire</PrimarySound>
    <ActionSound>HudCraftBarProgressLoopMeals</ActionSound>
    <Mass>180</Mass>
    <MaxIntegrity>600</MaxIntegrity>
  </Definition>

  <Definition xsi:type="MyObjectBuilder_CraftingRecipeDefinition">
    <Id Type="CraftingRecipeDefinition" Subtype="DecayableBloomery"/>
    <DisplayName>DisplayName_Block_Furnace</DisplayName>
    <Description>Description_Block_Furnace</Description>
    <Icon>Textures\GUI\Icons\Cubes\ClayFurnace.dds</Icon>
    <Category>Woodcrafting</Category>
    <Prerequisites>
      <Item Amount="20" Type="InventoryItem" Subtype="Dirt" />
      <Item Amount="18" Type="InventoryItem" Subtype="StoneSmall" />
    </Prerequisites>
    <Results>
      <Item Amount="1" Type="Block" Subtype="DecayableBloomery" />
    </Results>
    <CraftingTime Seconds="6"/>
  </Definition>

  <Definition xsi:type="MyObjectBuilder_EntityFXComponentDefinition">
    <Id Type="EntityFXComponent" Subtype="DecayableBloomeryFX" />
    <Effects>
      <Effect StartEvent="FuelOn" StopEvent="FuelOff" Dummy="fire_dummy">
        <EffectId Type="EffectDefinition" Subtype="Torch"/>
      </Effect>
    </Effects>
  </Definition>

  <Definition xsi:type="MyObjectBuilder_UseObjectsComponentDefinition">
    <Id Type="UseObjectsComponent" Subtype="DecayableBloomery" />
    <LoadFromModel>false</LoadFromModel>
    <UseObjects>
      <UseObject Dummy="detector_inventory" Name="inventory" />
    </UseObjects>
  </Definition>

  <Definition xsi:type="MyObjectBuilder_CraftingComponentDefinition">
    <Id Type="CraftingComponent" Subtype="DecayableBloomeryCrafting" />
    <InputInventory>InputInventory</InputInventory>
    <OutputInventory>OutputInventory</OutputInventory>
    <CraftingInventory>CraftingInventory</CraftingInventory>
    <ProductInventory>ProductInventory</ProductInventory>
    <PowerRequired>All</PowerRequired>
    <PowerConsumptionStyle>Continuous</PowerConsumptionStyle>
    <CraftingSpeedMultiplier>1</CraftingSpeedMultiplier>
    <ReturnPrerequisitesOnCancel>true</ReturnPrerequisitesOnCancel>
    <CraftString>CraftString_Smelt</CraftString>
    <CraftingString>CraftingString_Smelting</CraftingString>
  </Definition>

  <Definition xsi:type="MyObjectBuilder_CraftingSchedulerDefinition">
    <Id Type="CraftingScheduler" Subtype="DecayableBloomeryScheduler" />
    <CraftingComponent Type="CraftingComponent" Subtype="FurnaceCrafting" />
    <QueueSize>6</QueueSize>
  </Definition>

  <Definition xsi:type="MyObjectBuilder_ConstantRecipeProviderComponentDefinition">
    <Id Type="ConstantRecipeProviderComponent" Subtype="DecayableBloomeryRecipes" />
    <Category>Smelting</Category>
    <Category>Melting</Category>
  </Definition>

  <!-- The decaying component. Sets how often to decay 1 durability of items inside -->
  <Definition xsi:type="MyObjectBuilder_DecayHandlerComponentDefinition">
    <Id Type="DecayHandlerComponent" Subtype="DecayableBloomery"/>
    <TickInterval>1000</TickInterval>
    <!-- 1000 milliseconds -->
  </Definition>

  <Definition xsi:type="MyObjectBuilder_ContainerDefinition" Copy="Append">
    <Id Type="Block" Subtype="DecayableBloomery" />
    <CopyFrom Type="EntityBase" Subtype="BaseFatBlock" />

    <Component Type="CraftingComponent" Subtype="DecayableBloomeryCrafting" />
    <Component Type="CraftingScheduler" Subtype="DecayableBloomeryScheduler" />
    <Component Type="ConstantRecipeProviderComponent" Subtype="DecayableBloomeryRecipes" />

    <Component Type="DecayHandlerComponent" Subtype="DecayableBloomery" />

    <Component Type="Inventory" Subtype="InputInventory" />
    <Component Type="Inventory" Subtype="CraftingInventory" />
    <Component Type="Inventory" Subtype="ProductInventory" />
    <Component Type="Inventory" Subtype="OutputInventory" />

    <Component Type="FuelComponent" Subtype="Fire" />
    <Component Type="Inventory" Subtype="Fuel" />

    <Component Type="InventorySpawnComponent" />
    <Component Type="EntityFXComponent" Subtype="DecayableBloomeryFX" />
    <Component Type="UseObjectsComponent" Subtype="FurnaceClay" />
  </Definition>



  <!-- ============================= End Bloomery stuff ============================= -->


  <!-- ============================= Begin Ingot stuff ============================= -->
  <!-- This ingot is a "DurableItem". When it's inside the bloomery inventory it will lose 1 durability from MaxDurability each TickInterval. When it decays it returns a gold ingot. -->

  <Definition xsi:type="MyObjectBuilder_DurableItemDefinition">
    <Id Type="DurableItem" Subtype="DecayingIngot" />
    <DisplayName>TEST - Decaying Ingot</DisplayName>
    <Description>A very strong, lightweight, material.</Description>
    <Icon>Textures\GUI\Icons\Ingot\MithrilIngotIcon.dds</Icon>
    <Size>
      <X>0.25</X>
      <Y>0.25</Y>
      <Z>0.25</Z>
    </Size>
    <Mass>100</Mass>
    <Model>Models\Ingots\MithrilIngot.mwm</Model>
    <MaxStackAmount>10</MaxStackAmount>
    <Health>520</Health>
    <MaxDurability>4</MaxDurability>
    <BrokenItem Type="InventoryItem" Subtype="IngotGold"/>
  </Definition>


  <!-- ============================= End Ingot stuff ============================= -->

</Definitions>