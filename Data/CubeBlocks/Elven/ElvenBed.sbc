<?xml version="1.0"?>
<Definitions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">

  <Definition xsi:type="MyObjectBuilder_BuildableBlockDefinition">
    <Id Type="Block" Subtype="ElvenBed" />
    <Rotation>All</Rotation>
    <DisplayName>Elven Bed</DisplayName>
    <Description>Elven bed</Description>
    <Icon>Textures\GUI\Icons\Cubes\ElvenBed.dds</Icon>
    <GridDataDefinitionId Type="GridDataComponent" Subtype="SmallGridDataBase" />
    <BoundingBox>
      <Min x="-2" y="0" z="-4" />
      <Max x="2" y="3" z="4" />
    </BoundingBox>
    <Model>Models\Cubes\Small\ElvenBed.mwm</Model>
    <PhysicalMaterial>WoodHeavy</PhysicalMaterial>
    <Components>
      <Component Type="Block" Subtype="ElvenBed" Count="1" />
    </Components>
    <Mass>30</Mass>
    <MaxIntegrity>200</MaxIntegrity>
  </Definition>
  
  <Definition xsi:type="MyObjectBuilder_ContainerDefinition" Copy="Append">
    <Id Type="Block" Subtype="ElvenBed" />
    <CopyFrom Type="EntityBase" Subtype="BaseFatBlock" />
    
    <Component Type="BindableRespawnComponent" />
    <Component Type="EntityOwnershipComponent" />
  </Definition>


  <Definition xsi:type="MyObjectBuilder_CraftingRecipeDefinition">
    <Id Type="MyObjectBuilder_CraftingRecipeDefinition" Subtype="ElvenBed" />    
    <DisplayName>Elven Bed</DisplayName>
    <Icon>Textures\GUI\Icons\Cubes\ElvenBed.dds</Icon>
    <Category>Elven_Carpentry_Table</Category>
    <Prerequisites>
      <Item Amount="10" Type="InventoryItem" Subtype="Enchanted_WoodenSticks" />
      <Item Amount="4" Type="InventoryItem" Subtype="StringLinen" />
    </Prerequisites>
    <Results>
      <Item Amount="1" Type="Block" Subtype="ElvenBed" />
    </Results>
    <CraftingTime Seconds="3"/>
  </Definition>

  <Definition xsi:type="MyObjectBuilder_CraftingRecipeDefinition">
    <Id Type="MyObjectBuilder_CraftingRecipeDefinition" Subtype="ElvenBed_Carpenter" />
    <DisplayName>Carpenter: Elven Bed</DisplayName>
    <Icon>Textures\GUI\Icons\ScrollBackground_1.dds</Icon>
    <Icon>Textures\GUI\Icons\Cubes\ElvenBed.dds</Icon>
    <Icon>Textures\GUI\Icons\ScrollBackground_2.dds</Icon>
    <Category>Elven_Carpentry_Book</Category>
    <Prerequisites>
      <Item Amount="10" Type="SchematicItem" Subtype="Schematic_Enchanted_TreeSmall_WoodenSticks" />
      <Item Amount="4" Type="InventoryItem" Subtype="StringLinen" />
    </Prerequisites>
    <Results>
      <Item Amount="1" Type="SchematicItem" Subtype="Carpenter_Schematic_ElvenBed" />
    </Results>
    <CraftingTime Seconds="3"/>
  </Definition>

  <Definition xsi:type="MyObjectBuilder_SchematicItemDefinition">
    <Id Type="SchematicItem" Subtype="Carpenter_Schematic_ElvenBed" />
    <Public>true</Public>
    <DisplayName>Elven Bed Manuscript</DisplayName>
    <Description>
      As you examine the manuscript, you notice 
      diagrams and written instructions explaining
      the process for crafting an Elven Bed. This 
      knowledge would be valuable for a Carpenter.
    </Description>
    <Icon>Textures\GUI\Icons\ScrollBackground_1.dds</Icon>
    <Icon>Textures\GUI\Icons\Cubes\ElvenBed.dds</Icon>
    <Icon>Textures\GUI\Icons\ScrollBackground_2.dds</Icon>
    <Size>
      <X>0.1</X>
      <Y>0.1</Y>
      <Z>0.1</Z>
    </Size>
    <Mass>0.25</Mass>
    <Model>Models\Cubes\small\Scroll.mwm</Model>
    <PhysicalMaterial>None</PhysicalMaterial>
    <MaxStackAmount>10</MaxStackAmount>
    <UseSound>PlayEat</UseSound>
    <Research Type="ResearchDefinition" Subtype="ElvenBed_Carpenter" />
    <CanSpawnFromScreen>true</CanSpawnFromScreen>
  </Definition>


</Definitions>