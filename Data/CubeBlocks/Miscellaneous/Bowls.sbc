  </Definition>

  <Definition xsi:type="MyObjectBuilder_CraftingRecipeDefinition">
    <Id Type="MyObjectBuilder_CraftingRecipeDefinition" Subtype="Water_Bowl" />   
    <DisplayName>Fill Empty Bowl</DisplayName>
    <Icon>Textures\GUI\Icons\Universal\Farming\Water_Bucket.dds</Icon>
    <Description>Fills and empty bowl with water from the well. Will only work if the well is on grass or dirt.</Description>
    <Category>Stone_Well</Category>
    <Prerequisites>
      <Item Amount="1" Type="Block" Subtype="Empty_Bowl" />
    </Prerequisites>
    <Results>
      <Item Amount="1" Type="Block" Subtype="Water_Bowl" />
    </Results>
    <CraftingTime Seconds="1.5"/>
  </Definition>

