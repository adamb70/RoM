  <Definition xsi:type="MyObjectBuilder_BuildableBlockDefinition">
    <Id Type="Block" Subtype="Water_Bowl" />
    <Rotation>All</Rotation>
    <DisplayName>Water Bowl</DisplayName>
    <Description>Water Bowl</Description>
    <Icon>Textures\GUI\Icons\Universal\Farming\Water_Bucket.dds</Icon>
    <Public>true</Public>
    <GridDataDefinitionId Type="GridDataComponent" Subtype="SmallGridDataBase" />
    <BoundingBox>
      <Min x="0" y="0" z="0" />
